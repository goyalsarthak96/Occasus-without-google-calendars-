<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dvs.occasus" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature android:name="android.hardware.wifi" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Occasus" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetToggles"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".SoundToggles"
            android:parentActivityName=".SetToggles" >
        </activity>

        <receiver android:name=".Activate_event" >
        </receiver>
        <receiver android:name=".deactivate_event" >
        </receiver>

        <activity
            android:name=".SystemToggles"
            android:parentActivityName=".SetToggles" >
        </activity>
        <activity
            android:name=".BluetoothSettings"
            android:parentActivityName=".SystemToggles" >
        </activity>
        <activity
            android:name=".SilentSettings"
            android:parentActivityName=".SystemToggles" >
        </activity>
        <activity
            android:name=".ShutDownSettings"
            android:parentActivityName=".SystemToggles" >
        </activity>
        <activity
            android:name=".WifiSettings"
            android:label="@string/title_activity_wifi_settings" >
        </activity>
        <activity
            android:name=".MobileDataSettings"
            android:parentActivityName=".SystemToggles" >
        </activity>
        <activity
            android:name=".CreateEvent"
            android:label="@string/title_activity_create_event" >
        </activity>
        <activity
            android:name=".SendMessage"
            android:label="@string/title_activity_send_message" >
        </activity>
        <activity
            android:name=".ContactsException"
            android:label="@string/title_activity_contacts_exception" >
        </activity>
        <activity
            android:name=".Edit_event"
            android:label="@string/title_activity_edit_event" >
        </activity>
        <activity
            android:name=".Show_details"
            android:label="@string/title_activity_show_details" >
        </activity>
    </application>

</manifest>
